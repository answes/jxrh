<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.pup.controller.PasswordController"
            style="-fx-border-width: 1px;-fx-border-color: #A9A9A9">
    <AnchorPane prefHeight="30" style="-fx-background-color: black" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0">
        <Label fx:id="lbTitle" alignment="CENTER" prefHeight="30" style="-fx-text-fill: white;-fx-font: 14px;"
               text="重置密码" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               AnchorPane.topAnchor="0"/>
        <Button onAction="#close" style="-fx-background-color: transparent;-fx-text-fill: white" text="X"
                AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="2" AnchorPane.topAnchor="0"/>
    </AnchorPane>
    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="1" AnchorPane.leftAnchor="1"
          AnchorPane.rightAnchor="1" AnchorPane.topAnchor="31">

    </VBox>
    <GridPane prefHeight="159.0" prefWidth="400.0" AnchorPane.topAnchor="60">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="145.0"/>
            <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="35.0" valignment="CENTER"/>
            <RowConstraints minHeight="10.0" prefHeight="35.0" valignment="CENTER"/>
            <RowConstraints minHeight="10.0" prefHeight="35.0" valignment="CENTER"/>
            <RowConstraints minHeight="10.0" prefHeight="35.0" valignment="CENTER"/>
        </rowConstraints>
        <children>
            <Label alignment="CENTER_LEFT" text="手机号码:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="phone" text="183****7141" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label alignment="CENTER_LEFT" text="验证码:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <HBox alignment="CENTER" spacing="4" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <TextField fx:id="account" prefWidth="100"/>
                <Button prefHeight="23.0" prefWidth="55.0" text="发送"/>
            </HBox>
            <Label alignment="CENTER_LEFT" text="新密码:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label alignment="CENTER_LEFT" text="确认密码:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField prefWidth="160.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </children>
    </GridPane>
    <Button prefHeight="40" prefWidth="300" text="提交" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50.0">
    </Button>
</AnchorPane>
